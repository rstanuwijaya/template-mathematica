#!/usr/bin/env wolframscript

list = RunProcess[{"git", "diff", "--cached", "--name-status"}, 
  "StandardOutput"]
paths = Map[(StringSplit[#, "\t"] &), StringSplit[list, "\n"]]
paths = Select[paths, #[[1]] != "D" && StringEndsQ[#[[2]], ".nb"] &]
paths = paths[[;; , 2]]

Map[
 Export["Rendered/" <> (StringReplace[#, ".nb" -> ".pdf"]), 
   Import[#]] &, paths ]
Run[{"git", "add", "*.pdf"}]
